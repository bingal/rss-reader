{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "rss-reader",
  "version": "0.1.6",
  "identifier": "com.bingal.rss-reader",
  "plugins": {
    "updater": {
      "pubkey": "-----BEGIN PUBLIC KEY-----\ndW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEI4RDAxODcyQjZBMkNCNjcKUldSbnk2SzJjaGpRdUIxRSttekdFUzJrMWZKaGU5RDQycHFjQnJLU1N1b3A4a1dYdzNFN2lyZU8K\n-----END PUBLIC KEY-----"
    },
    "shell": {
      "open": ".*"
    }
  },
  "build": {
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "bun run dev",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "RSS Reader",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null,
      "capabilities": ["default", "shell-sidecar"]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": ["binaries/*"],
    "linux": {
      "deb": {
        "depends": []
      }
    }
  }
}
